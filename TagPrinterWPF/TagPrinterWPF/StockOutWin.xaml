<Window x:Class="TagPrinterWPF.StockOutWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagPrinterWPF"
        mc:Ignorable="d"
        Title="StockOutWin" Height="320" Width="480">
    <Grid>
        <Label HorizontalAlignment="Left" Margin="20,34,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" FontFamily="Arial Black">
            <TextBlock Text="Please scan the barcode on the RFID tag!。" 
               TextWrapping="Wrap" FontSize="24" Width="427"/>
        </Label>
        <TextBox x:Name="Txt_Barcode" HorizontalAlignment="Left" Margin="20,112,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="437" FontSize="20" FontWeight="Bold" FontFamily="Arial Black" KeyDown="Txt_Barcode_KeyDown"/>
        <Label x:Name="Lbl_Msg" Content="Label" HorizontalAlignment="Left" Margin="20,152,0,0" VerticalAlignment="Top" Width="437" Height="143" FontSize="20" FontWeight="Bold" FontFamily="Arial Black"/>
        <Label x:Name="Lbl_Empid" Content="Label" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Width="151" FontFamily="Arial Black" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="Lbl_Action" Content="物料室出庫" HorizontalAlignment="Left" Margin="340,6,0,0" VerticalAlignment="Top" Width="130" FontFamily="Arial Black" FontWeight="Bold" FontSize="16"/>

    </Grid>
</Window>
