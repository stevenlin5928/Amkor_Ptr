<Window x:Class="TagPrinterWPF.RePrint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagPrinterWPF"
        mc:Ignorable="d"
        Title="RePrint" Height="300" Width="400">
    <Grid>
        <Label Content="RequestNo :" HorizontalAlignment="Left" Margin="19,21,0,0" VerticalAlignment="Top" Width="106" FontSize="14" FontWeight="Bold"/>
        <Label Content="SID :" HorizontalAlignment="Left" Margin="19,61,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label Content="TagID :" HorizontalAlignment="Left" Margin="19,99,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <ComboBox x:Name="Combo_Request" HorizontalAlignment="Left" Margin="130,25,0,0" VerticalAlignment="Top" Width="184" FontSize="14" FontWeight="Bold" SelectionChanged="Combo_Request_SelectionChanged"/>
        <ComboBox x:Name="Combo_SID" HorizontalAlignment="Left" Margin="130,64,0,0" VerticalAlignment="Top" Width="184" FontSize="14" FontWeight="Bold" SelectionChanged="Combo_SID_SelectionChanged"/>
        <ComboBox x:Name="Combo_TagID" HorizontalAlignment="Left" Margin="130,102,0,0" VerticalAlignment="Top" Width="184" FontSize="14" FontWeight="Bold" SelectionChanged="Combo_TagID_SelectionChanged"/>
        <Label Content="EMPID :" HorizontalAlignment="Left" Margin="19,142,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="Txt_OPID" HorizontalAlignment="Left" Margin="130,146,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="16" FontWeight="Bold" MaxLength="8"/>
        <Button x:Name="Btn_Print" Content="Print" HorizontalAlignment="Left" Margin="19,210,0,0" VerticalAlignment="Top" Height="30" Width="85" FontWeight="Bold" Click="Btn_Print_Click"/>
        <Button x:Name="Btn_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="109,210,0,0" VerticalAlignment="Top" Height="30" Width="85" FontWeight="Bold" Click="Btn_Cancel_Click"/>

    </Grid>
</Window>
